/**
 * This file will contain the basic functions that define the operator overloading functions on vectors.
 * Defined multiplication on it.
 * **/

#include <vector>

using namespace std;

const vector<double> operator*(const vector<double>& LeftVector, const double Factor)
{
	int CurrentElement,VectorLength=LeftVector.size();
	vector<double> Result(VectorLength);
	for(CurrentElement=0;CurrentElement<VectorLength;CurrentElement++)
		Result[CurrentElement]=Factor*LeftVector[CurrentElement];
	return Result;
}

const vector<double> operator*(const double Factor, const vector<double>& LeftVector)
{
	int CurrentElement,VectorLength=LeftVector.size();
	vector<double> Result(VectorLength);
	for(CurrentElement=0;CurrentElement<VectorLength;CurrentElement++)
		Result[CurrentElement]=Factor*LeftVector[CurrentElement];
	return Result;
}

